<Window x:Class="DSSExcel.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DSSExcel"
        mc:Ignorable="d"
        Title="DSSExcel" Height="277" Width="602" MinWidth="480" MinHeight="450">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="147*"/>
            <ColumnDefinition Width="326*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="104*"/>
            <RowDefinition Height="315*"/>
        </Grid.RowDefinitions>
        <Button Content="Choose DSS File..." Margin="19,30,10,0" VerticalAlignment="Top" Height="20"/>
        <Button Content="Choose Excel File..." Margin="19,71,10,0" VerticalAlignment="Top" Height="20"/>
        <TextBox x:Name="DssFilePath" Height="20" Margin="10,30,16,0" TextWrapping="Wrap" VerticalAlignment="Top" IsReadOnly="True" Background="#FFF3F3F3" BorderBrush="#FFBBBBBB" Grid.Column="1"/>
        <TextBox x:Name="ExcelFilePath" Height="20" Margin="10,71,16,0" TextWrapping="Wrap" VerticalAlignment="Top" IsReadOnly="True" Background="#FFF3F3F3" BorderBrush="#FFBBBBBB" Grid.Column="1"/>
        <Button Content="Import" Margin="19,285,0,0" Grid.Row="1" VerticalAlignment="Top" HorizontalAlignment="Left" Width="107" Height="20"/>
        <Button Content="Export" Margin="0,285,16,0" Grid.Row="1" VerticalAlignment="Top" Grid.Column="1" HorizontalAlignment="Right" Width="107" Height="20"/>
        <ListBox x:Name="SheetList" Height="100" Margin="19,34,16,0" Grid.Row="1" VerticalAlignment="Top" Grid.ColumnSpan="2" BorderBrush="#FFB3ABAD"/>
        <ListBox x:Name="DssPathList" Height="100" Margin="19,161,16,0" Grid.Row="1" VerticalAlignment="Top" Grid.ColumnSpan="2"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="19,11,0,0" Grid.Row="1" TextWrapping="Wrap" Text="Select Excel Sheets:" VerticalAlignment="Top" Width="139" BorderBrush="{x:Null}" FontSize="14" Grid.ColumnSpan="2"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="19,138,0,0" Grid.Row="1" TextWrapping="Wrap" Text="Select DSS Paths:" VerticalAlignment="Top" Width="128" BorderBrush="{x:Null}" FontSize="14"/>
    </Grid>
</Window>
